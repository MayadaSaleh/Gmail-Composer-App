<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="42dp"
    android:background="#ffffff"
    tools:context="task.enozom.gmailcomposerapp.gmail.composer.PopUpFragment">

    <ImageView
        android:id="@+id/galleryImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="26dp"
        android:clickable="true"
        android:src="@drawable/gallery_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/galleryImage"
        android:layout_alignStart="@+id/galleryImage"
        android:layout_below="@+id/galleryImage"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Gallery"
        android:textColor="#000000"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/cameraImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/galleryImage"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/camera_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="Camera"
        android:textColor="#000000"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/VideoImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cameraImage"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:clickable="true"
        android:src="@drawable/video_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/VideoImageView"
        android:layout_alignRight="@+id/VideoImageView"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Video"
        android:textColor="#000000"
        android:textStyle="bold" />
</RelativeLayout>
